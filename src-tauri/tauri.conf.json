{
  "productName": "Measurementor",
  "version": "0.1.0",
  "identifier": "dev.measurementor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Measurementor",
        "width": 1400,
        "height": 860,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],

    "resources": {
      "models/*": "models/",
      "tessdata/*": "tessdata/",
      "libs/windows/*": "."
    },

    "linux": {
      "deb": {
        "depends": [
          "libtesseract5",
          "libleptonica6"
        ]
      }
    },

    "windows": {
      "nsis": {
        "installerHooks": "nsis-extra.nsi"
      }
    }
  },
  "plugins": {}
}
