{
  "productName": "Measurementor",
  "version": "0.1.0",
  "identifier": "dev.measurementor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Measurementor",
        "width": 1400,
        "height": 860,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],

    "resources": {
      "models/*": "models/",
      "libs/windows/*": "."
    },

    "linux": {
      "deb": {
        "depends": [
          "libavcodec61 | libavcodec-extra",
          "libavformat61",
          "libavutil59",
          "libswscale8",
          "libswresample5",
          "libavfilter10",
          "libavdevice61",
          "libtesseract5",
          "libleptonica6"
        ]
      }
    },

    "windows": {
      "nsis": {
        "installerHooks": "nsis-extra.nsi"
      }
    }
  },
  "plugins": {}
}
